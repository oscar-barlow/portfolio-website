<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main>
      <div class="profile-section">
        <div class="profile-image-container">
          <img src="{{ '/images/oscar.jpg' | relative_url }}" alt="Oscar Barlow" class="profile-image">
          <div class="image-accent"></div>
        </div>
        <div class="title-section">
          <h1>Oscar Barlow</h1>
          <div class="executive-tagline">Technology Leader & Strategic Advisor</div>
        </div>
      </div>
      
      <div class="rubric">
        {{ content }}
      </div>
    </main>
    <!-- 100% privacy-first analytics -->
    <script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <noscript>
      <img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" referrerpolicy="no-referrer-when-downgrade">
    </noscript>
  </body>
</html>
